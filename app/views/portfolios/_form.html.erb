<%= form_with(model: @portfolio_item) do |portfolio_item| %>
  <div class="row">
    <div class="col-md-6">
      <div class="mb-3">
        <%= portfolio_item.label :title %>
        <%= portfolio_item.text_field :title, class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= portfolio_item.label :subtitle %>
        <%= portfolio_item.text_field :subtitle, class: "form-control" %>
      </div>
    </div>

    <div class="col-md-6">
      <div class="mb-3">
        <%= portfolio_item.label :body %>
        <%= portfolio_item.text_area :body, class: "form-control", rows: 13 %>
      </div>
    </div>
  </div>
  
  <hr>

  <div class="col-md-12">
    <h2>Technologies Used:</h2>
    <div class="mb-3">
      <%= portfolio_item.fields_for :technologies do |technology_form| %>
      <div>
        <%= technology_form.label :name %>
        <%= technology_form.text_field :name, class: "form-control" %>
      </div>
      <% end %>
    </div>

    <div class="actions d-grid">
      <%= portfolio_item.submit "Save Portfolio Item", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
